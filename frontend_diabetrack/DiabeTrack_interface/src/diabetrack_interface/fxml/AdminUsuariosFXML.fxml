<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="diabetrack_interface.controllers.AdminUsuariosController">
      
    <Label style="-fx-font-size: 22; -fx-font-weight: bold;" text="Gestión de Usuarios" />

    <TableView fx:id="tablaUsuarios" prefWidth="500.0">
        <columns>
            <TableColumn fx:id="colId" prefWidth="60" text="ID" />
            <TableColumn fx:id="colNombre" prefWidth="160" text="Nombre" />
            <TableColumn fx:id="colEmail" prefWidth="180" text="Email" />
            <TableColumn fx:id="colAcciones" prefWidth="100" text="Acciones" />
        </columns>
    </TableView>

    <Button onAction="#volver" text="← Volver" />
</VBox>
