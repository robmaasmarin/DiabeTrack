<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane id="AnchorPane" prefHeight="800.0" prefWidth="1200.0" stylesheets="@../css/dashboard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="diabetrack_interface.controllers.CalculoBoloFXMLController">
    <top>
        <HBox fx:id="topBar" maxHeight="120" minHeight="120" prefHeight="120.0" prefWidth="0.0" styleClass="topBar" BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="imgLogo" fitHeight="100.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../resources/images/logoletrasblancassinfondohorizontal.png" />
                    </image>
                </ImageView>
                <Region fx:id="regionSeparar" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <HBox fx:id="comboHbox" alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" styleClass="comboHbox">
                    <children>
                        <ComboBox fx:id="choiceLanguage" prefWidth="150.0" styleClass="choiceLanguage" />
                        <ImageView fx:id="profileImg" fitHeight="45.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true" styleClass="profileImg">
                            <image>
                                <Image url="@../resources/images/user_8338841.png" />
                            </image>
                            <HBox.margin>
                                <Insets right="25.0" top="8.0" />
                            </HBox.margin>
                        </ImageView>
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>
   <bottom>
      <StackPane fx:id="stackContact" prefHeight="150.0" prefWidth="200.0" styleClass="stackContact" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="labelHelp" text="¿NECESITAS AYUDA?" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Button fx:id="btnContact" mnemonicParsing="false" styleClass="btnContact" text="CONTÁCTANOS" textFill="WHITE">
               <StackPane.margin>
                  <Insets top="40.0" />
               </StackPane.margin>
               
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
      </StackPane>
   </bottom>
   <center>
      <VBox fx:id="vBoxCalculo" prefHeight="510.0" prefWidth="529.0" styleClass="vBoxCalculo" BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="hBoxGlucosa" prefHeight="100.0" prefWidth="200.0" styleClass="hBoxGlucosa">
               <children>
                  <Label fx:id="labelGlucosa" styleClass="labelGlucosa" text="Glucosa actual (mg/dL):" />
                  <TextField fx:id="txtGlucosaActual" styleClass="txtGlucosaActual" />
               </children>
            </HBox>
            <HBox spacing="10">
<ComboBox fx:id="comboAlimentos" prefWidth="180" promptText="Selecciona alimento" styleClass="comboAlimentos">
</ComboBox>
    <TextField fx:id="txtCantidad" prefWidth="60" promptText="g" />
    <Button fx:id="btnAgregar" styleClass="btnAdd" text="+">
                  </Button>
</HBox>

                     <TableView fx:id="tableSeleccion" prefHeight="184.0" prefWidth="330.0" styleClass="tableSeleccion">
                       <columns>
                         <TableColumn fx:id="colNombre" prefWidth="160" text="Alimento" />
            <TableColumn fx:id="colCantidad" prefWidth="70" text="Cantidad (g)" />
            <TableColumn fx:id="colCarbs" prefWidth="90" text="Carbohidratos (g)" />
                       </columns>
                     </TableView>
                      <!-- cálculo de totales -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Total CH:" />
        <Label fx:id="labelTotalCarbs" text="0.0" />
        <Region HBox.hgrow="ALWAYS" />
        <Label text="Ratio (g/UD):" />
        <TextField fx:id="txtInsulinRatio" prefWidth="60" promptText="10" />
        <Button fx:id="btnCalcularBolo" text="Calcular bolo" />
    </HBox>
    <HBox spacing="10">
        <Label text="Dosis (UD):" />
        <Label fx:id="labelDosis" text="0.0" />
    </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
